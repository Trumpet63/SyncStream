{
    "name": "Commentary Sync Record",
    "description": "My extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "record_icon.png"
    },
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["*://*.youtube.com/*"],
    "background": {
        "service_worker": "background.js"
    }
}
